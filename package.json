{
    "name": "chris_homepage",
    "version": "1.0.0",
    "description": "Chris' Homepage",
    "repository": {
        "type": "git",
        "url": "codeberg.org/christopher-besch/homepage"
    },
    "license": "",
    "author": "Christopher Besch <mail@chris-besch.com>",
    "type": "module",
    "main": "src/build.tsx",
    "scripts": {
        "build": "tsc && HOMEPAGE_URL=https://chris-besch.com node --enable-source-maps build/build.js",
        "build_dev": "tsc && HOMEPAGE_URL=https://dev.chris-besch.com node --enable-source-maps build/build.js",
        "clean": "rm -rf build deploy cache",
        "clean_immich_portfolio": "rm -f cache/portfolio.json",
        "check_image_size": "! exiftool -if '($ImageWidth > 1600) or ($ImageHeight > 1600)' -filename -FileSize -ImageWidth -ImageHeight deploy/images",
        "watch": "fswatch --one-per-batch --latency 0.1 --event Updated -r -0 ./articles/ ./src/ ./styles/ ./static ./cache | xargs -0 -I {} -n 1 npm run build"
    },
    "devDependencies": {
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.6",
        "@types/react-dom": "^19.2.3",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@huggingface/transformers": "^3.8.1",
        "@immich/sdk": "^2.3.1",
        "@mdx-js/mdx": "^3.1.1",
        "feed": "^5.1.0",
        "gray-matter": "^4.0.3",
        "hast-util-from-html": "^2.0.3",
        "html-entities": "^2.6.0",
        "piscina": "^5.1.4",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "reading-time": "^1.5.0",
        "rehype-autolink-headings": "^7.1.0",
        "rehype-katex": "^7.0.1",
        "rehype-slug": "^6.0.0",
        "rehype-starry-night": "^2.2.0",
        "remark-math": "^6.0.0",
        "sharp": "^0.34.5"
    }
}
